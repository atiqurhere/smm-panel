{
  "name": "SMM Panel",
  "script": "npm start",
  "watch": false,
  "env": {
    "NODE_ENV": "production"
  },
  "apps": [
    {
      "name": "smm-panel-web",
      "script": "npm",
      "args": "start",
      "cwd": "./",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "instances": 1,
      "exec_mode": "cluster"
    },
    {
      "name": "smm-panel-workers",
      "script": "node",
      "args": "-r ts-node/register src/lib/workers.ts",
      "cwd": "./",
      "env": {
        "NODE_ENV": "production"
      },
      "instances": 1,
      "watch": false
    }
  ]
}